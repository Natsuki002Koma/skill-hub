<%= render "shared/header" %>
<div class="wrapper">

<!-- 左メニュー -->
  <div class="left_side">
    <div class="left_header">
      <div class="left_header-title">スキル一覧
      </div>
      <div class="create-skill">
        <%= link_to "スキルを登録する", new_skill_path %>
      </div>
    </div>

    <div class="skills">
      <% current_user.skills.each do |skill|%>
        <div class="skill">
          <div class="skill-name">
            <%= link_to skill.skill_name, "#" %>
          </div>
          <div class="skill-status">
            <%= skill.skill_status.name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<!-- 右側部分（ヘッダー） -->
  <div class="right_side">
    <div class="main_header">
      <div class="main_left-header">
        <div class="header-title">
          <%# <%= @skill.name %>Ruby
        </div>
      </div>
      <div class="main_right-header">
        <div class="main_right-text">
          <%# <%= @skill.status %>ステータス  ：勉強中<br>
          <%# <%= @skill.stars %>スキルレベル：★☆☆☆☆
        </div>
        <div class="header-button">
          <%= link_to "ステータスを変更する", "#" %>
        </div>
        <div class="header-button">
          <%= link_to "レベル更新を申請する", "#" %>
        </div>
      </div>
    </div>

<!-- 右側部分（メッセージ） -->
    <div class="tweets">
      <div class="tweet">
        <div class="upper-tweet">
          <div class="tweet-user">
            <!-- 投稿したユーザー名情報を出力する -->

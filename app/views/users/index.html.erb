<%= render "shared/header" %>
<div class="user_header">ユーザ一覧</div>
<div class="users">
  <% @users.each do |user|%>
    <div class="user">
      <div class="user-image">no_image</div>
      <div class="user-contents">
        <div class="user-title">NAME</div>
        <div class="user-text"><%= user.full_name%></div>
        <div class="user-title">skill</div>
        <div class="user-elements">
          <% user.skills.each do |skill|%>
            <div class="user-element-btn">
              <%= link_to skill.skill_name, skill_tweets_path(skill) %>
            </div>
          <% end %>
        </div>
        <div class="user-title">project</div>
        <div class="user-elements">
          <% user.projects.each do |project|%>
            <div class="user-element">
              <%= project.project_name %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

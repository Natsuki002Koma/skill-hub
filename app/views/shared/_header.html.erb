<header>
  <div class=head-items>
  <div class=head-left>
      <div class=logo>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
        <%= link_to"SkillHub", root_path %>
      </div>
      <div class=head-nemu>
        <% if user_signed_in? %>
          <div class=login-btn><%= link_to 'スキル', root_path %></div>
          <div class=login-btn><%= link_to 'プロジェクト', "#" %></div>
          <div class=login-btn><%= link_to 'ユーザ一覧', users_path %></div>
        <% end %>
      </div>
    </div>
    <div class=login>
      <% if user_signed_in? %>
        <div class=login-text><%= link_to "#{current_user.last_name} #{current_user.first_name} さん", edit_user_registration_path(current_user.id) %></div>
        <div class=login-btn><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete } %></div>
      <% else %>
        <div class=login-btn><%= link_to '新規登録', new_user_registration_path %></div>
        <div class=login-btn><%= link_to 'ログイン', new_user_session_path %></div>
      <% end %>
    </div>
  </div>
</header>